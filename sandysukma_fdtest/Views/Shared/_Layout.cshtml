@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>

    <!-- Sidebar -->
    <div class="d-flex min-vh-100">
        <!-- Sidebar -->
        <div class="bg-dark text-white d-flex flex-column p-3" style="width: 240px;">
            <h4 class="text-center mb-4"><i class="bi bi-speedometer2 me-2"></i>Dashboard</h4>

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a class="nav-link text-white @(Context.Request.Path.Value.Contains("UserList") ? "active bg-primary" : "")"
                       href="@Url.Action("Index", "UserList")">
                        <i class="bi bi-people-fill me-2"></i>User List
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(Context.Request.Path.Value.Contains("Book") ? "active bg-primary" : "")"
                       href="@Url.Action("Index", "Book")">
                        <i class="bi bi-book-fill me-2"></i>Book Management
                    </a>
                </li>
            </ul>

            <hr />
            <div class="mt-auto">
                <form id="logoutForm" asp-action="Logout" asp-controller="Account" method="post" class="d-none"></form>
                <a class="btn btn-outline-light w-100" href="javascript:document.getElementById('logoutForm').submit();">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                </a>

            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4 bg-light w-100">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
