@model sandysukma_fdtest.Models.Book
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Tambah Buku";
}

<h2>Tambah Buku</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Judul Buku</label>
        <input type="text" name="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Penulis</label>
        <input type="text" name="Author" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Deskripsi</label>
        <textarea name="Description" class="form-control" rows="4"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload Gambar Cover</label>
        <input type="file" name="ThumbnailUrl" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Rating (1-5)</label>
        <input type="number" name="Rating" class="form-control" min="1" max="5" />
    </div>
    <button type="submit" class="btn btn-primary">Simpan</button>
    <a asp-action="Index" class="btn btn-secondary">Kembali</a>
</form>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Berhasil!',
                text: '@TempData["SuccessMessage"]',
                confirmButtonColor: '#3085d6'
            });
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Gagal!',
                text: '@TempData["ErrorMessage"]',
                confirmButtonColor: '#d33'
            });
        </script>
    }
}
