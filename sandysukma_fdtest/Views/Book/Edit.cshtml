@model sandysukma_fdtest.Models.Book
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Buku";
}

<h2>Edit Buku</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label">Judul Buku</label>
        <input type="text" name="Title" value="@Model.Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Penulis</label>
        <input type="text" name="Author" value="@Model.Author" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Deskripsi</label>
        <textarea name="Description" class="form-control" rows="4">@Model.Description</textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Cover Saat Ini</label><br />
        <img src="@Model.ThumbnailUrl" alt="Cover Buku" width="100" />
    </div>
    <div class="mb-3">
        <label class="form-label">Ganti Cover (opsional)</label>
        <input type="file" name="ThumbnailUrl" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Rating (1-5)</label>
        <input type="number" name="Rating" value="@Model.Rating" class="form-control" min="1" max="5" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Batal</a>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (ViewBag.SuccessMessage != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Berhasil!',
                text: '@ViewBag.SuccessMessage',
                confirmButtonColor: '#3085d6'
            });
        </script>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Gagal!',
                text: '@ViewBag.ErrorMessage',
                confirmButtonColor: '#d33'
            });
        </script>
    }
}
