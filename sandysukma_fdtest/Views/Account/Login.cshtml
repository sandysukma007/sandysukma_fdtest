@model sandysukma_fdtest.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="card shadow mx-auto border-0" style="max-width: 420px;">
        <div class="card-body p-4">
            <h3 class="text-center mb-4">Masuk ke Akun Anda</h3>

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input name="Email" type="email" class="form-control" placeholder="nama@email.com" required />
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Kata Sandi</label>
                    <input name="Password" type="password" class="form-control" placeholder="••••••••" required />
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    
                    <a href="/Account/ForgotPassword" class="text-decoration-none small">Lupa Password?</a>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>

            <div class="text-center mt-4">
                <span class="text-muted">Belum punya akun?</span>
                <a href="/Account/Register" class="text-decoration-none fw-semibold">Daftar Sekarang</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (ViewBag.ErrorMessage != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Login Gagal',
                text: '@ViewBag.ErrorMessage',
                confirmButtonColor: '#d33'
            });
        </script>
    }
}
