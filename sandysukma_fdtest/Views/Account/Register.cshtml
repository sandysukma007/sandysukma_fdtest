@model sandysukma_fdtest.ViewModels.RegisterViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="card shadow mx-auto border-0" style="max-width: 420px;">
        <div class="card-body p-4">
            <h3 class="text-center mb-4">Daftar Akun Baru</h3>

            <form method="post" action="/Account/Register">
                <div class="mb-3">
                    <label for="UserName" class="form-label">Username</label>
                    <input type="text" name="UserName" id="UserName" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" name="Email" id="Email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" name="Password" id="Password" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label">Konfirmasi Password</label>
                    <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">Daftar</button>
            </form>

            <div class="text-center mt-4">
                <span class="text-muted">Sudah punya akun?</span>
                <a href="/Account/Login" class="text-decoration-none fw-semibold">Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (!ViewData.ModelState.IsValid)
    {
        var allErrors = string.Join("\\n", ViewData.ModelState.Values
            .SelectMany(v => v.Errors)
            .Select(e => e.ErrorMessage));

        <script>
            Swal.fire({
                icon: 'error',
                title: 'Pendaftaran Gagal',
                html: '@allErrors'.replace(/\\n/g, "<br/>"),
                confirmButtonColor: '#d33'
            });
        </script>
    }
}
